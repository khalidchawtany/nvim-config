{
    "coc.preferences.extensionUpdateCheck": "never" ,
    "diagnostic.virtualText": true,
    "suggest.autoTrigger": "always",
    "suggest.triggerAfterInsertEnter": false,
    "suggest.minTriggerInputLength": 1,
    "suggest.timeout": 5000,
    "suggest.triggerCompletionWait": 100,
    "suggest.noselect": true,
    "coc.preferences.formatOnType": false,
    "coc.preferences.jumpCommand": "edit",
    "codeLens.enable": true,
    "codeLens.separator": "?",
    "suggest.snippetIndicator": "",
    "diagnostic.enable": true,
    "diagnostic.signOffset": 1000,
    "diagnostic.errorSign": "",
    "diagnostic.warningSign": "»",
    "diagnostic.infoSign": "›",
    "diagnostic.hintSign": "º°",

    "vetur.validation.template": true,

    "suggest.languageSourcePriority": 1,
    "coc.source.syntax.priority":     2,
    "snippets.priority":              1,

    "coc.source.around.enable": true,
    "coc.source.around.priority": 3,
    "coc.source.around.shortcut": "A",

    "coc.source.buffer.enable": true,
    "coc.source.buffer.shortcut": "B",
    "coc.source.buffer.priority": 4,

    "coc.source.dictionary.enable": true,
    "coc.source.dictionary.shortcut": "D",
    "coc.source.dictionary.priority": 5,

    "coc.source.word.enable": false,
    "coc.source.word.shortcut": "10k",
    "coc.source.word.priority": 99,


    "coc.source.ultisnips.enable": true,
    "coc.source.ultisnips.priority": 1,
    "coc.source.ultisnips.shortcut": "US",

    "coc.source.file.enable": true,
    "coc.source.file.shortcut": "F",
    "coc.source.file.priority": 1,
    "coc.source.file.triggerCharacters": ["/"],
    "coc.source.file.trimSameExts": [".ts", ".js"],
    "coc.source.file.ignoreHidden": true,
    "coc.source.file.ignorePatterns": [],

    "coc.source.tag.enable": true,
    "coc.source.tag.shortcut": "T",
    "coc.source.tag.priority": 3,

   "tailwind.enable": true,
   "tailwind.shortcut": "TWCSS",
   "tailwind.priority": 2,

    "python.formatting.provider": "autopep8",

    "list.normalMappings": {
      "t": "action:tabe",
      "v": "action:vsplit",
      "s": "action:split",
      "d": "expr:GetDeleteAction"
    },
    "list.insertMappings": {
      "<C-t>": "action:tabe",
      "<C-w>": "command:wincmd k"
    },
 "explorer.keyMappings": {
    "k": "nodePrev",
    "j": "nodeNext",

    "*": "toggleSelection",
    "<tab>": "actionMenu",

    "h": "collapse",
    "l": "expand",
    "J": ["toggleSelection", "normal:j"],
    "K": ["toggleSelection", "normal:k"],
    "gl": "expandRecursive",
    "gh": "collapseRecursive",
    "o": "expandOrCollapse",
    "<cr>": "open",
    "e": "open",
    "E": "openInVsplit",
    "t": "openInTab",
    "<bs>": "gotoParent",
    "-": "gotoParent",

    "y": "copyFilepath",
    "Y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",
    "R": "refresh",

    "?": "help",
    "q": "quit",
    "X": "systemExecute",
    "gd": "listDrive",

    "f": "search",
    "F": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "[[": "sourcePrev",
    "]]": "sourceNext",

    "[d": "diagnosticPrev",
    "]d": "diagnosticNext",

    "[c": "gitPrev",
    "]c": "gitNext",
    "<<": "gitStage",
    ">>": "gitUnstage"
 },

    "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": false,

    "intelephense.completion.insertUseDeclaration" :true,

    "languageserver": {
        "golang": {
            "command": "/Users/juju/go/bin/gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    },
    "git.enableGutters": true,
    "todolist.monitor": true

}
